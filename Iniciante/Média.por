programa {
  funcao inicio() {
    
    //Declaração de variáveis 
    real n1, n2, n3, n4, media

    //entrada
    escreva ("Digite a primeira idade: ")
    leia (n1)
    escreva ("Digite a segunda idade: ")
    leia(n2)
    escreva ("Digite a terceira idade: ")
    leia (n3)
    escreva("Digite a quarta idade: ") 
    leia(n4) 

    //Processamento 
    media = (n1 + n2 + n3 + n4) /4 
    
    //saída
    escreva("A media é: ", media)
    }
}
